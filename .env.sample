# PostgreSQL Configuration (Local)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=football_analytics
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# ============================================================================
# CONFLUENT CLOUD KAFKA CONFIGURATION (Primary)
# ============================================================================
# Get Bootstrap Servers from: Confluent Cloud Console → Cluster Settings
# Example regions: us-east-1, us-west-2, ap-southeast-1, eu-west-1
KAFKA_BOOTSTRAP_SERVERS=your-cluster.region.aws.confluent.cloud:9092

# Create API Key/Secret from: Confluent Cloud Console → API Keys
KAFKA_API_KEY=your_kafka_api_key
KAFKA_API_SECRET=your_kafka_api_secret

# Kafka Topic Name (will be auto-created if not exists)
KAFKA_TOPIC=live-match-events

# ============================================================================
# FOOTBALL DATA API
# ============================================================================
# Get from: https://www.football-data.org/client/register (FREE tier: 10 req/min)
FOOTBALL_API_TOKEN=your_football_api_token

# API-Football (RapidAPI) - Optional alternative source
RAPID_API_KEY=your_rapidapi_key

# ============================================================================
# POLLING CONFIGURATION
# ============================================================================
LIVE_MATCH_INTERVAL=30        # Poll live matches every 30 seconds
SCHEDULED_MATCH_INTERVAL=1800 # Poll scheduled matches every 30 minutes
API_RATE_LIMIT_WAIT=6         # Wait 6s between API calls (10 req/min limit)
POLL_INTERVAL=60              # General polling interval

# Kafka Configuration (Local - if using local Kafka)
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Streaming Configuration
CHECKPOINT_LOCATION=/tmp/spark-checkpoints
STREAMING_OUTPUT_PATH=/tmp/football_streaming

# Spark Configuration
SPARK_HOME=/opt/spark
SPARK_MASTER=local[*]

# Data Paths
DATA_PATH=/home/hung/Downloads/bigdata/football_project/football-datasets/datalake/transfermarkt
